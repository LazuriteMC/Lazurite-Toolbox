{
  "schemaVersion": 1,
  "id": "toolbox",
  "version": "${version}",

  "name": "Lazurite Toolbox",
  "description": "A set of utils used by several Lazurite mods.",
  "authors": [ "The Lazurite Team" ],
  "contact": {
    "homepage": "https://lazurite.dev",
    "sources": "https://github.com/lazuritemc/lazurite-toolbox",
    "issues": "https://github.com/lazuritemc/lazurite-toolbox/issues"
  },

  "license": "MIT",
  "icon": "assets/toolbox/icon.png",
  "environment": "*",
  "mixins": [ "toolbox.mixins.json" ],
  "accessWidener" : "toolbox.accesswidener",

  "depends": {
    "fabricloader": ">=0.7.4",
    "fabric": "*",
    "minecraft": "1.17.x"
  },

  "suggests": {
    "flamingo": "*"
  }
}
